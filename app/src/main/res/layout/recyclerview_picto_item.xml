<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/board_view_page_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="top"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/picto_card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:cardUseCompatPadding="true"
        android:onClick="pictoSelected"
        app:cardElevation="4dp">


        <LinearLayout
            android:id="@+id/board_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:weightSum="10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picto_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@android:color/holo_blue_light"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/picto_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="TENGO HAMBRE"
                android:background="@android:color/white"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>