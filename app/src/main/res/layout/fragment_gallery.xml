<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_constraint_layout"
    tools:context=".ui.dashboard.DashboardPlayFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fixed_pictos_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toTopOf="@id/fragment_constraint_layout"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="159dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_pictos_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/fixed_pictos_recycler_view"
        tools:layout_editor_absoluteX="27dp" />

</androidx.constraintlayout.widget.ConstraintLayout>